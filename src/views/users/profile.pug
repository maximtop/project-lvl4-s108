extends /layouts/application.pug

block content
  .row.justify-content-center.mt-5
    .col-8
      p Name:
      h2= user.fullName
      p Email:
      h3= user.email
      p createdAt:
      h3= user.createdAt
  .row.justify-content-center
    .col-1
      form(action= `${user.id}?_method=PATCH` method='post')
        button.btn.btn-primary(type='submit') Edit
      //a(href= user.id + '?_method=PATCH' role='button' class='btn btn-primary') Edit
    .col-1
      form(action= `${user.id}?_method=DELETE` method='post')
        button.btn.btn-danger(type='submit') Delete
extends /layouts/application.pug

block content
  .row.justify-content-center.mt-5
    .col-8
      p Name:
      h2= user.fullName
      p Email:
      h3= user.email
      p createdAt:
      h3= user.createdAt
      h3 User Tasks:
      ul
        each task in user.AssignedTask
          li
            a(href=urlFor('task', task.id ))= task.name
  .row.justify-content-center
    .col-1
      a(href=urlFor('userEdit', user.id) data-method='get' role='button' class=`btn btn-primary ${(userId() !== user.id) ? 'disabled' : ''}` rel='nofollow') Edit
    .col-1
      a(href=urlFor('userDelete', user.id) data-method='delete' role='button' class=`btn btn-danger ${(userId() !== user.id) ? 'disabled' : ''}` rel='nofollow') Delete
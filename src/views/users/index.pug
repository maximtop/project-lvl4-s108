extends /layouts/application.pug

block content
  table.table.table-stripped
    thead
      tr
        th Full Name
        th Email
        th Created At
    tbody
      each user in users
        tr
          td= user.fullName
          td= user.email
          td= user.createdAt
          td
            span.ml-1
              a(href='users/' + user.id) Profile
